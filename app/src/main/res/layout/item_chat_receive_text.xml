<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:chat="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="wrap_content"
        android:text="19:23"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_chat_time"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/tv_chat_time"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_icon"
            android:layout_width="45dp"
            chat:riv_oval="true"
            android:layout_marginLeft="10dp"
            android:layout_height="45dp"/>


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:padding="6dp"
            android:textSize="14sp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_centerVertical="true"
            android:textColor="@color/darkslategrey"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:autoLink="all"
            android:background="@drawable/icon_chat_left"
            android:lineSpacingExtra="10dp"
            android:maxWidth="225dp"
            android:minWidth="40dp"
            android:minHeight="20dp"
            android:layout_height="wrap_content"/>



    </RelativeLayout>



</RelativeLayout>
